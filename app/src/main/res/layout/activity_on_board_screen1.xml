<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardScreen1"
    android:background="@drawable/onboardsc1">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="921dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/os1btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:translationX="0dp"
            android:translationY="825dp" />

        <TextView
            android:id="@+id/os1txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOR MENS"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:background="#A86F1D"
            android:padding="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>