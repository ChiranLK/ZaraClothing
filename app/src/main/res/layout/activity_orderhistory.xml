<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orderhistory"
    android:background="@drawable/figmabackground">




    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="921dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/orderPrevious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/previous"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:translationY="30dp"
            android:translationX="-155dp"  />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="My Orders"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>


        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:translationY="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/carthistory" />



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navibar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:translationY="370dp"
            android:background="@color/white"
            app:menu="@menu/navigationbar"
            app:layout_constraintBottom_toBottomOf="parent" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>